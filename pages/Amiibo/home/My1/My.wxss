.navigator-box {
    background-color: #fff;
    font-size: 34rpx;
    line-height: 1.41176471;
    opacity: 0;
    position: relative;
    transform: translateY(-50%);
    transition: .3s;
}

.navigator-box-show {
    opacity: 1;
    transform: translateY(0);
}

.navigator {
    align-items: center;
    display: flex;
    padding: 20rpx 30rpx;
    position: relative;
}

.navigator:before {
    border-top: 1rpx solid #d8d8d8;
    color: #d8d8d8;
    content: " ";
    height: 1px;
    left: 30rpx;
    position: absolute;
    right: 30rpx;
    top: 0;
}

.navigator:first-child:before {
    display: none;
}

.navigator-text {
    flex: 1;
}

.navigator-arrow {
    padding-right: 26rpx;
    position: relative;
}

.navigator-arrow:after {
    border-color: #888;
    border-style: solid;
    border-width: 2rpx 2rpx 0 0;
    content: " ";
    display: inline-block;
    height: 18rpx;
    margin-top: -8rpx;
    position: absolute;
    right: 28rpx;
    top: 50%;
    transform: matrix(.71,.71,-.71,.71,0,0);
    width: 18rpx;
}

.kind-list-item {
    background-color: #fff;
    border-bottom: 1px dashed #888;
    border-radius: 4rpx;
    margin: 20rpx 0;
    overflow: hidden;
}

.kind-list-item:first-child {
    margin-top: 0;
}

.kind-list-text {
    flex: 1;
}

.kind-list-img {
    height: 60rpx;
    width: 60rpx;
}

.kind-list-item-hd {
    align-items: center;
    display: flex;
    padding: 30rpx;
    transition: opacity .3s;
}

.kind-list-item-hd-show {
    opacity: .2;
}

.kind-list-item-bd {
    height: 0;
    overflow: hidden;
}

.kind-list-item-bd-show {
    height: auto;
}